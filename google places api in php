function initialize() {
    var input = document.getElementById('autocomplete');
	var options = {componentRestrictions: {country: 'ca'}}; 	
    new google.maps.places.Autocomplete(input, options);
}
             
google.maps.event.addDomListener(window, 'load', initialize);
</script>
